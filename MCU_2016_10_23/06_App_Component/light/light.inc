#include "gpio.S"
#指示灯端口及引脚定义
.equ LIGHT_RED,(PTB_NUM|19)    @红色RUN灯使用的端口/引脚
.equ LIGHT_BLUE,(PTB_NUM|9)    @蓝色RUN灯使用的端口/引脚
.equ LIGHT_GREEN,(PTB_NUM|18)  @绿色RUN灯使用的端口/引脚

#灯状态宏定义（灯亮、灯暗对应的物理电平由硬件接法决定）
.equ LIGHT_ON,0     @灯亮
.equ LIGHT_OFF,1    @灯暗

